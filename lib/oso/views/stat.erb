<div class="stat">
  <p>
    <a href="<%= shorturl @short %>"><%= @short %></a> points at
    <a href="<%= @long %>"><%= shorten @long %></a>
  </p>
  <p>
    <% if @hits > 0 %>
      It's been hit <b><%= @hits %></b> time<%= "s" if @hits != 1 %>, most
      recently <b data-at="<%= @time %>">timestamp</b>.
    <% end %>

    <% if @limit > 0 %>
      It can be hit <b><%= @limit %> more time<%= "s" if @limit != 1 %></b>
      before it disappears.
    <% end %>
  </p>
  <h5>Referrers</h5>
  <table>
    <thead>
      <tr>
        <th>URL</th>
        <th>Count</th>
      </tr>
    </thead>
    <% Hash[@referrers.sort].each do |url, count| %>
      <tr>
        <td><%= url == 't.co' ? "t.co (twitter redirect)" : url %></td>
        <td><%= count %></td>
      </tr>
    <% end %>
  </table>
</div>
